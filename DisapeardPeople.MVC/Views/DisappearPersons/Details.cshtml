@model DisapeardPeople.MVC.Models.DisappearPerson

@{
    ViewData["Title"] = "Detale";
}



<div class="container">
    <h1>Informacje o zaginionej osobie</h1>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div>
                    <div class="white-box text-center mx-auto"><img src="@("~/Image/"+Model.Image)" asp-append-version="true" class="img-responsive" width="300" /></div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">Szczegółowe informacje</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="390">@Html.DisplayNameFor(model => model.FirstName)</td>
                                    <td><strong>@Html.DisplayFor(model => model.FirstName)</strong></td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Surname)</td>
                                    <td><strong>@Html.DisplayFor(model => model.Surname)</strong></td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Age)</td>
                                    <td><strong>@Html.DisplayFor(model => model.Age)</strong></td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Height)</td>
                                    <td><strong>@Html.DisplayFor(model => model.Height) cm</strong></td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.City)</td>
                                    <td><strong>@Html.DisplayFor(model => model.City)</strong></td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.DisappearDate)</td>
                                    <td><strong>@Html.DisplayFor(model => model.DisappearDate)</strong></td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Province)</td>
                                    <td><strong>@Html.DisplayFor(model => model.Province)</strong></td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Gender)</td>
                                    <td><strong>@Html.DisplayFor(model => model.Gender)</strong></td>
                                </tr>
                            </tbody>
                        </table>
                        <a asp-action="Index">Wróć do listy osób zaginionych</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
